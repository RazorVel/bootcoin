<script>
    document.addEventListener("click", function(event) {
        if (event.target.classList.contains("detail")) {
            var name = event.target.getAttribute("data-name");
            var modalBody = document.querySelector(".modal-body #recipient-name");
            modalBody.value = name;
        }
    });
</script>
<script>
    const addButton = document.querySelector(".add-bootcoin-btn");
    const okButton = document.querySelector(".ok-bootcoin-btn");
    const closeButton = document.querySelector(".btn-close");
    const cardElement = document.querySelector(".modal-body");
    const content1 = document.querySelector(".content-1");
    const content2 = document.querySelector(".content-2");
    const modal = document.getElementById("bootcoinModal");

    addButton.addEventListener("click", function () {
    document.querySelector(".content-1").style.display = "none";
    document.querySelector(".content-2").style.display = "block";
    });

    okButton.addEventListener("click", function () {
    setTimeout(function () {
        document.querySelector(".content-1").style.display = "block";
        document.querySelector(".content-2").style.display = "none";
    }, 500);
    });

    closeButton.addEventListener("click", function () {
    setTimeout(function () {
        document.querySelector(".content-1").style.display = "block";
        document.querySelector(".content-2").style.display = "none";
    }, 500);
    });

    modal.addEventListener("click", function (event) {
    if (event.target.classList.contains("modal")) {
        setTimeout(function () {
        document.querySelector(".content-1").style.display = "block";
        document.querySelector(".content-2").style.display = "none";
        }, 500);
    }
    });
</script>
@section Scripts {
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/Bootstrap.min.js"></script>
}